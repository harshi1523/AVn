rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if the user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Function to check if the user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Function to check if the requestor is an admin
    // Fetches the user's profile document to check the 'role' field
    function isAdmin() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // Root user document & all subcollections
    match /users/{userId}/{allPaths=**} {
      
      // Allow read/write if:
      // 1. User is the owner of the document
      // 2. OR User is an Admin
      allow read, write: if (isSignedIn() && isOwner(userId)) || isAdmin();
    }

    // Products collection
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
